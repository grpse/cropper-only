
{
  "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "experimentalDecorators": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "module": "es2015",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": ".",
      "sourceMap": true,
      "inlineSources": true,
      "target": "es2015",
      "skipLibCheck": true,
      "preserveSymlinks": true,
      "lib": [
          "es2015",
          "dom"
      ]
  },
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
      "skipTemplateCodegen": true,
      "preserveSymlinks": true,
      "annotateForClosureCompiler": true,
      "strictMetadataEmit": true,
      "flatModuleOutFile": "cropper-only.js",
      "flatModuleId": "cropper-only"
  }
}